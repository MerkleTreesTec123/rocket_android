<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_f9"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <!--原密码-->
                <com.ifenduo.lib_base.widget.CustomEditText
                    android:id="@+id/old_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    app:ce_bottom_line_error_color="@color/colorEF2357"
                    app:ce_bottom_line_focus_color="@color/colorAccent"
                    app:ce_bottom_line_unfocus_color="@color/colorF1F1F1"
                    app:ce_edit_hint="@string/input_old_password_hint"
                    app:ce_edit_hint_color="@color/colorB7B7C4"
                    app:ce_edit_input_type="password"
                    app:ce_edit_text_color="@color/color262626"
                    app:ce_edit_text_size="14sp"
                    app:ce_error_drawable_left="@drawable/ic_edit_error"
                    app:ce_error_text_size="10sp"
                    app:ce_eye_button_drawable="@drawable/selector_custom_edit_eye"
                    app:ce_eye_button_enable="true"
                    app:ce_left_button_enable="false"/>

                <!--新密码-->
                <com.ifenduo.lib_base.widget.CustomEditText
                    android:id="@+id/new_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:ce_bottom_line_error_color="@color/colorEF2357"
                    app:ce_bottom_line_focus_color="@color/colorAccent"
                    app:ce_bottom_line_unfocus_color="@color/colorF1F1F1"
                    app:ce_edit_hint="@string/input_6_12_pay_password_hint"
                    app:ce_edit_hint_color="@color/colorB7B7C4"
                    app:ce_edit_input_type="password"
                    app:ce_edit_max_length="50"
                    app:ce_edit_text_color="@color/color262626"
                    app:ce_edit_text_size="14sp"
                    app:ce_error_drawable_left="@drawable/ic_edit_error"
                    app:ce_error_text_size="10sp"
                    app:ce_eye_button_drawable="@drawable/selector_custom_edit_eye"
                    app:ce_eye_button_enable="true"
                    app:ce_high_level_color="@color/color24D95F"
                    app:ce_left_button_enable="false"
                    app:ce_level_view_enable="true"
                    app:ce_level_view_height="4dp"
                    app:ce_low_level_color="@color/colorEF2357"
                    app:ce_middle_level_color="@color/colorEF5923"/>

                <!--确认密码-->
                <com.ifenduo.lib_base.widget.CustomEditText
                    android:id="@+id/new_edit_text_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:ce_bottom_line_error_color="@color/colorEF2357"
                    app:ce_bottom_line_focus_color="@color/colorAccent"
                    app:ce_bottom_line_unfocus_color="@color/colorF1F1F1"
                    app:ce_edit_hint="@string/confirm_pay_password_hint"
                    app:ce_edit_hint_color="@color/colorB7B7C4"
                    app:ce_edit_input_type="password"
                    app:ce_edit_max_length="50"
                    app:ce_edit_text_color="@color/color262626"
                    app:ce_edit_text_size="14sp"
                    app:ce_error_drawable_left="@drawable/ic_edit_error"
                    app:ce_error_text_size="10sp"
                    app:ce_eye_button_drawable="@drawable/selector_custom_edit_eye"
                    app:ce_eye_button_enable="true"
                    app:ce_left_button_enable="false"/>

                <!--身份证号-->
                <com.ifenduo.lib_base.widget.CustomEditText
                    android:id="@+id/id_card_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:ce_bottom_line_error_color="@color/colorEF2357"
                    app:ce_bottom_line_focus_color="@color/colorAccent"
                    app:ce_bottom_line_unfocus_color="@color/colorF1F1F1"
                    app:ce_edit_hint="@string/input_id_number_hint"
                    app:ce_edit_hint_color="@color/colorB7B7C4"
                    app:ce_edit_input_type="text"
                    app:ce_edit_text_color="@color/color262626"
                    app:ce_edit_text_size="14sp"
                    app:ce_error_drawable_left="@drawable/ic_edit_error"
                    app:ce_error_text_size="10sp"
                    app:ce_eye_button_drawable="@drawable/selector_custom_edit_eye"
                    app:ce_eye_button_enable="false"
                    app:ce_left_button_enable="false"/>

                <!--谷歌验证码-->
                <com.ifenduo.lib_base.widget.CustomEditText
                    android:id="@+id/google_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    app:ce_bottom_line_error_color="@color/colorEF2357"
                    app:ce_bottom_line_focus_color="@color/colorAccent"
                    app:ce_bottom_line_unfocus_color="@color/colorF1F1F1"
                    app:ce_edit_hint="@string/input_google_code_hint_"
                    app:ce_edit_hint_color="@color/colorB7B7C4"
                    app:ce_edit_input_type="number"
                    app:ce_edit_max_length="6"
                    app:ce_edit_text_color="@color/color262626"
                    app:ce_edit_text_size="14sp"
                    app:ce_error_drawable_left="@drawable/ic_edit_error"
                    app:ce_error_text_size="10sp"
                    app:ce_eye_button_drawable="@drawable/selector_custom_edit_eye"
                    app:ce_eye_button_enable="false"
                    app:ce_left_button_enable="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!--验证码-->
                    <com.ifenduo.lib_base.widget.CustomEditText
                        android:id="@+id/phone_vercode_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"
                        app:ce_bottom_line_error_color="@color/colorEF2357"
                        app:ce_bottom_line_focus_color="@color/colorAccent"
                        app:ce_bottom_line_unfocus_color="@color/colorF1F1F1"
                        app:ce_edit_hint="@string/phone_ver_code_iput"
                        app:ce_edit_hint_color="@color/colorB7B7C4"
                        app:ce_edit_input_type="number"
                        app:ce_edit_max_length="6"
                        app:ce_edit_text_color="@color/color262626"
                        app:ce_edit_text_size="14sp"
                        app:ce_error_drawable_left="@drawable/ic_edit_error"
                        app:ce_error_text_size="10sp"
                        app:ce_eye_button_drawable="@drawable/selector_custom_edit_eye"
                        app:ce_eye_button_enable="false"
                        app:ce_left_button_enable="false"/>

                    <TextView
                        android:id="@+id/tvPhoneCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        android:text="@string/get_phone_ver_code"
                        android:textColor="@color/color01AA78"
                        android:textSize="14sp"
                        android:visibility="visible"/>
                </LinearLayout>

                <!--忘记密码-->
                <TextView
                    android:id="@+id/forget_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/forget_payment_password_"
                    android:textColor="@color/color8488F5"
                    android:textSize="14sp"/>
            </LinearLayout>

            <!--确认-->
            <Button
                android:id="@+id/btn_sure"
                style="@style/SubmitButton"
                android:text="@string/sure"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>