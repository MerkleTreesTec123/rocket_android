<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="35dp"
        android:background="@drawable/shape_ffffff_radius_4">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:src="@mipmap/node_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/uase_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxyyy"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/color3B3E43"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/icon"/>

        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--"
            android:textSize="20sp"
            android:textColor="@color/color666666"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/icon"
            android:layout_marginTop="32dp"/>


        <View
            android:id="@+id/lin_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee"
            android:layout_below="@+id/user_phone"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>

        <TextView
            android:id="@+id/usdt_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哥伦布USDT余额"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/lin_view"/>

        <TextView
            android:id="@+id/usdt_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0个"
            android:textColor="@color/color348AFA"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="end"
            android:layout_toRightOf="@+id/usdt_y"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/lin_view"/>

        <TextView
            android:id="@+id/cat_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="哥伦布CAT余额"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/usdt_y"/>

        <TextView
            android:id="@+id/cat_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.0个"
            android:textColor="@color/color348AFA"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/cat_y"
            android:gravity="end"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/usdt_num"/>

        <TextView
            android:id="@+id/title_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bind_remaining"
            android:textColor="@color/color8284A8"
            android:textSize="10sp"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/cat_num"/>

        <Button
            android:id="@+id/transfer_btn"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_below="@+id/title_hint"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:textSize="14sp"
            android:text="@string/fee_withdraw"
            android:textColor="@color/white"
            android:background="@drawable/bg_72fff9" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@drawable/close_x"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>