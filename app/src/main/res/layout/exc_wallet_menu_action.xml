<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_ffffff_radius_4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/scan_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/exc_wallet_menu_scan"
        android:drawablePadding="14dp"
        android:padding="14dp"
        android:paddingLeft="22dp"
        android:paddingTop="14dp"
        android:text="@string/exc_wal_scan_code"
        android:textColor="@color/excWalColor292A49"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/qr_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/exc_wallet_menu_qr"
        android:drawablePadding="14dp"
        android:padding="14dp"
        android:paddingLeft="22dp"
        android:paddingTop="14dp"
        android:text="@string/exc_wal_qr"
        android:textColor="@color/excWalColor292A49"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/address_button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:drawableLeft="@drawable/exc_wallet_menu_address"
        android:drawablePadding="14dp"
        android:padding="14dp"
        android:paddingLeft="22dp"
        android:paddingTop="14dp"
        android:text="@string/exc_wal_address_book"
        android:textColor="@color/excWalColor292A49"
        android:textSize="14sp" />

</LinearLayout>