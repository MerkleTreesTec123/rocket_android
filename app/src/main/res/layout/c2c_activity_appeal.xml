<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c2cColorF1F1F1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="@string/c2c_reasons_for_appeal"
        android:textSize="12sp"
        android:textColor="@color/c2cColor000000"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/content_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="16dp"
        android:background="@null"
        android:hint="@string/input_appeal_reason_hint"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:singleLine="true"
        android:textColor="@color/c2cColor292A49"
        android:textColorHint="@color/c2cColorB7B7C4"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/c2cColorF1F1F1" />

    <RelativeLayout
        android:id="@+id/qr_container"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/c2c_shape_f1f1f1_frame">

        <ImageView
            android:id="@+id/qr_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp" />

        <LinearLayout
            android:id="@+id/tips_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/c2c_ic_add_image_appeal"
                android:drawablePadding="4dp"
                android:text="@string/c2c_add_credentials"
                android:textColor="@color/c2cColor292A49"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:drawablePadding="4dp"
                android:text="@string/c2c_upload_relevant_documents"
                android:textColor="@color/c2cColorB7B7C4"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/submit_button"
        style="@style/SubmitButton"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="16dp"
        android:enabled="false"
        android:text="@string/c2c_confirmation_appeal" />
</LinearLayout>