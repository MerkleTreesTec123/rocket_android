<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_f9"
    android:orientation="vertical">

    <include layout="@layout/toolbar_actionbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--持卡人-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/c2c_cardholder"
                    android:textColor="@color/c2cColor000000"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/cardholder_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/c2c_enter_cardholder_name"
                    android:inputType="text"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:singleLine="true"
                    android:textColor="@color/c2cColor292A49"
                    android:textColorHint="@color/c2cColorB7B7C4"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/c2cColorF1F1F1"/>

            <!--银行卡号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/c2c_bank_card_number"
                    android:textColor="@color/c2cColor000000"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/bankCardNumber_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/c2c_enter_the_bank_card_number"
                    android:maxLength="60"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:singleLine="true"
                    android:textColor="@color/c2cColor292A49"
                    android:textColorHint="@color/c2cColorB7B7C4"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/c2cColorF1F1F1"/>

            <!--银行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/c2c_bank"
                    android:textColor="@color/c2cColor000000"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/bank_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/c2c_input_bank_card_belongs_to_the_bank"
                    android:inputType="text"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:singleLine="true"
                    android:textColor="@color/c2cColor292A49"
                    android:textColorHint="@color/c2cColorB7B7C4"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/c2cColorF1F1F1"/>

            <!--银行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/c2c_opening_bank"
                    android:textColor="@color/c2cColor000000"
                    android:textSize="12sp"/>

                <EditText
                    android:id="@+id/depositBank_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="@string/c2c_input_open_card_bank"
                    android:inputType="text"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:singleLine="true"
                    android:textColor="@color/c2cColor292A49"
                    android:textColorHint="@color/c2cColorB7B7C4"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/c2cColorF1F1F1"/>

            <!--保存-->
            <Button
                android:id="@+id/submit_button"
                style="@style/SubmitButton"
                android:layout_marginBottom="80dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="30dp"
                android:enabled="false"
                android:text="@string/c2c_save"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>